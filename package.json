{
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "lint": "prettier . --write && eslint . --fix",
    "postinstall": "yarn yarn-deduplicate && husky install",
    "clean-install": "rm -rf node_modules apps/web-app/node_modules apps/server/node_modules && yarn",
    "ts-check": "yarn --cwd apps/web-app ts-check && yarn --cwd apps/server ts-check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,less,scss,json,gql,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@typescript-eslint/typescript-estree": "^6.4.0",
    "eslint": "8.47.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "yarn-deduplicate": "^6.0.2"
  }
}
